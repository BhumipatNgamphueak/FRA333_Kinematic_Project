  <!-- Gazebo ros2_control Plugin -->
  <gazebo>
    <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <parameters>$(find hexapod_simulation)/config/controller_full.yaml</parameters>
    </plugin>
  </gazebo>

  <!-- Ground Contact Plugin for all foot contacts -->
  <xacro:macro name="foot_contact_sensor" params="leg_num">
    <gazebo reference="foot_contact_${leg_num}">
      <sensor name="foot_contact_sensor_${leg_num}" type="contact">
        <contact>
          <collision>foot_contact_${leg_num}_collision</collision>
        </contact>
        <always_on>true</always_on>
        <update_rate>100</update_rate>
      </sensor>
      
      <!-- Contact surface properties -->
      <mu1>0.8</mu1>
      <mu2>0.8</mu2>
      <kp>1000000.0</kp>
      <kd>100.0</kd>
      <minDepth>0.001</minDepth>
      <maxVel>0.01</maxVel>
    </gazebo>
  </xacro:macro>

  <!-- Instantiate contact sensors for all 6 legs -->
  <xacro:foot_contact_sensor leg_num="1"/>
  <xacro:foot_contact_sensor leg_num="2"/>
  <xacro:foot_contact_sensor leg_num="3"/>
  <xacro:foot_contact_sensor leg_num="4"/>
  <xacro:foot_contact_sensor leg_num="5"/>
  <xacro:foot_contact_sensor leg_num="6"/>

  <!-- IMU Sensor on Base Link -->
  <gazebo reference="base_link">
    <sensor name="imu_sensor" type="imu">
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
      <topic>imu_data</topic>
      <enable_metrics>false</enable_metrics>
    </sensor>
  </gazebo>

</robot>
